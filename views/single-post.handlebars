<div class="single-post">
    <article class="card">
        <div class="card-header" flex-row justify-space-between>
            <h1>{{post.title}}</h1>
            <div>
                Posted by {{post.User.username}} on {{post.createdAt}}
            </div>
        </div>
        <div class="card-body">
            {{post.body}}
        </div>
    </article>

    {{#if post.Comments}}
    <section class="card">
        <div class="card-body">
            <h2>Comments</h2>
        </div>

        <div class="card-body">
            {{#each post.Comments}}
            <p>
                {{body}}
            </p>
            <p>
                {{User.username}}, {{format_date crearedAt}}
            </p>
        </div>
        {{/each}}
</div>
</section>
{{/if}}

<form id="new-comment-form" class="card">
    <div class="card-header">
        <h3>Add a comment</h3>
    </div>

    <div class="card-body">
        <input type="hidden" name="post-id" value="{{post.id}}" />
        <label for="comment-body" class="form-label">Comment</label>
        <textarea class="form-control" id="comment-body" name="comment-body"></textarea>
        <button type="submit" class="btn">Submit</button>
    </div>
</form>
</div>

<script src="/public/js/comment.js"></script>